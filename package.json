{
  "name": "mcp-a11y-server",
  "version": "0.1.0",
  "description": "MCP Server for web accessibility tools orchestration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "accessibility",
    "a11y",
    "wcag",
    "axe-core",
    "pa11y"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.11.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axe-core": "^4.11.1",
    "pino": "^10.1.1",
    "puppeteer": "^24.35.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-istanbul": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "prettier": "^3.7.4",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.17"
  }
}
