{
  "name": "accessibility-hub",
  "version": "0.10.0",
  "description": "MCP Server for web accessibility tools orchestration",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "type": "module",
  "bin": {
    "accessibility-hub": "./dist/server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "prebuild": "node scripts/check-node-version.js",
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "inspect": "pnpm build && mcp-inspector node dist/server.js",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "accessibility",
    "a11y",
    "wcag",
    "axe-core",
    "pa11y",
    "web-accessibility",
    "accessibility-testing"
  ],
  "author": "Diego Razquin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drzkn/A-I-ccesibility"
  },
  "bugs": {
    "url": "https://github.com/drzkn/A-I-ccesibility/issues"
  },
  "homepage": "https://github.com/drzkn/A-I-ccesibility#readme",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.11.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axe-core": "^4.11.1",
    "colorjs.io": "^0.6.1",
    "pa11y": "^9.0.1",
    "pino": "^10.1.1",
    "lighthouse": "^13.0.1",
    "puppeteer": "^24.35.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/node": "^22.10.0",
    "@types/pa11y": "^5.3.7",
    "@vitest/coverage-v8": "^4.0.17",
    "prettier": "^3.7.4",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.17"
  }
}
